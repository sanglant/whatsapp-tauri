{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WhatsApp Linux",
  "version": "0.1.0",
  "identifier": "com.whatsapp.wrapper",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WhatsApp",
        "label": "main",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "https://web.whatsapp.com/"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
